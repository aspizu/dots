{
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum', 'calt'",
    "editor.inlayHints.enabled": "off",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": false,
    "window.menuBarVisibility": "toggle",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "python.formatting.provider": "black",
    "python.formatting.yapfArgs": [
        "--style={indent_width: 2, COLUMN_LIMIT: 88, ARITHMETIC_PRECEDENCE_INDICATION: true, BLANK_LINE_BEFORE_NESTED_CLASS_OR_DEF: false, COALESCE_BRACKETS: true}"
    ],
    "editor.tabSize": 2,
    "python.linting.mypyEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=F401",
        "--max-line-length=88"
    ],
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "strict",
    "files.insertFinalNewline": true,
    "editor.fontFamily": "Cascadia Code",
    "editor.fontWeight": "400",
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    // "editor.lineHeight": 13,
    "security.workspace.trust.enabled": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [
        88
    ],
    "nim.provider": "lsp",
    "nim.enableNimsuggest": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.tabSize": 4,
    },
    "[scala]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "metals.javaHome": "/usr/lib/jvm/java-18-openjdk",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    // "editor.guides.indentation": false
    // "window.titleBarStyle": "custom"
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment",
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "python.analysis.diagnosticMode": "workspace",
    "errorLens.exclude": [
        "never used",
        "unused",
        "is not accessed"
    ],
    "errorLens.scrollbarHackEnabled": true,
    "errorLens.messageBackgroundMode": "message",
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "isort.showNotifications": "always",
    "isort.check": true,
    "isort.args": [
        "--profile",
        "black"
    ],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.checkUpdates": false,
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "window.zoomLevel": -1
}
