{
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum', 'calt'",
    "editor.inlayHints.enabled": "off",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": false,
    "window.menuBarVisibility": "toggle",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "python.formatting.provider": "black",
    "python.formatting.yapfArgs": [
        "--style={indent_width: 2, COLUMN_LIMIT: 88, ARITHMETIC_PRECEDENCE_INDICATION: true, BLANK_LINE_BEFORE_NESTED_CLASS_OR_DEF: false, COALESCE_BRACKETS: true}"
    ],
    "editor.tabSize": 2,
    "python.linting.mypyEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501,E402,W503,E101,E111,E114,E115,E116,E117,E12,E13,E2,E3,E401,E5,E70,W1,W2,W3,W5,E741,F403,F405"
    ],
    "files.insertFinalNewline": true,
    "editor.fontFamily": "gloria",
    "editor.fontWeight": "400",
    "editor.fontSize": 11,
    "terminal.integrated.fontSize": 11,
    "security.workspace.trust.enabled": false,
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        88
    ],
    "nim.provider": "lsp",
    "nim.enableNimsuggest": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.tabSize": 4,
    },
    "[scala]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "metals.javaHome": "/usr/lib/jvm/java-18-openjdk",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    // "editor.guides.indentation": false
    // "window.titleBarStyle": "custom"
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment",
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "python.analysis.diagnosticMode": "workspace",
    "errorLens.exclude": [
        "never used",
        "unused"
    ],
    "errorLens.scrollbarHackEnabled": true,
    "errorLens.messageBackgroundMode": "message",
}
